---
interface Props {
  currentPage: number;
  totalPages: number;
  basePath: string;
}
const { currentPage, totalPages, basePath } = Astro.props;
const base = basePath.replace(/\/$/, '') || '';
const root = base || '/';
const prevHref = currentPage === 2 ? root : `${base}/page/${currentPage - 1}`;
const nextHref = `${base}/page/${currentPage + 1}`;
---
<nav class="pagination" role="pagination" aria-label="Blog pagination">
  <div class="container">
    <ul>
      {currentPage > 1 && (
        <li>
          <a class="newer-posts" href={prevHref} rel="prev">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
            <span>Newer posts</span>
          </a>
        </li>
      )}
      <li>
        <span class="page-number">Page {currentPage} of {totalPages}</span>
      </li>
      {currentPage < totalPages && (
        <li>
          <a class="older-posts" href={nextHref} rel="next">
            <span>Older posts</span>
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
          </a>
        </li>
      )}
    </ul>
  </div>
</nav>
